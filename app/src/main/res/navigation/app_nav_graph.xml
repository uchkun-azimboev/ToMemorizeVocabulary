<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph.xml"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="uz.pdp.tomemorizevocabulary.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_lessonCreateFragment"
            app:destination="@id/lessonCreateFragment" />
        <action
            android:id="@+id/action_mainFragment_to_lessonFragment"
            app:destination="@id/lessonFragment" />
    </fragment>

    <fragment
        android:id="@+id/lessonCreateFragment"
        android:name="uz.pdp.tomemorizevocabulary.ui.LessonCreateFragment"
        android:label="fragment_lesson_create"
        tools:layout="@layout/fragment_lesson_create" />
    <fragment
        android:id="@+id/lessonFragment"
        android:name="uz.pdp.tomemorizevocabulary.ui.lesson.LessonFragment"
        android:label="fragment_lesson"
        tools:layout="@layout/fragment_lesson" />
</navigation>