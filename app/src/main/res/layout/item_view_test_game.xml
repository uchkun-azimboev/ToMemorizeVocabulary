<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="15dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/pure_gray"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/blue"
        app:strokeWidth="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_voice"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/gray"
            android:src="@drawable/ic_sound_24px"
            android:visibility="gone"
            app:contentPadding="10dp"
            app:shapeAppearanceOverlay="@style/circle_corner"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_question"
            style="@style/BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/str_choose_category"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="15dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_answer_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pure_gray"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/shape_corner_rounded"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_a"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_answer_a"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/str_answer"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_answer_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pure_gray"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/shape_corner_rounded"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_b"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_answer_b"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/str_answer"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_answer_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pure_gray"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/shape_corner_rounded"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_c"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_answer_c"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/str_answer"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_answer_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/pure_gray"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:background="@drawable/shape_corner_rounded"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/str_d"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_answer_d"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/str_answer"
                android:textColor="@color/white" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>